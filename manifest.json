{
		"manifest_version": 2,

		"name": "Bloomberg Vision",
		"short_name": "BV",
		"description": "Allows users to keep track of financial markets",
		"version": "1.0",

		"content_scripts":
		[	
			{
				"matches":["http://*/*", "https://*/*"],
				"js":["scripts/scripts.js", "scripts/jquery-2.1.3.js"]
			}
		],

		"browser_action":{
				"default_icon": "static/honwei.png",
				"default_popup": "html/data.html"
		},
		"icons":{
				"16":"static/honwei.png",
				"48":"static/honwei48.png",
				"128":"static/honwei128.png"
		}


}